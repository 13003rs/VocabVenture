<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LayoutConstraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/basicLayout"
        android:layout_width="347dp"
        android:layout_height="583dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvBasicFragment"
            android:layout_width="314dp"
            android:layout_height="145dp"
            android:layout_marginLeft="15dp"
            app:cardBackgroundColor="#428AB4"
            app:cardCornerRadius="15dp">

            <ImageView
                android:id="@+id/ivBasicFragment"
                android:layout_width="193dp"
                android:layout_height="244dp"
                android:layout_marginLeft="-24dp"
                android:layout_marginTop="-40dp"
                app:srcCompat="@drawable/basic_icon" />

            <TextView
                android:id="@+id/tvBasic_Fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="38dp"
                android:fontFamily="@font/futura"
                android:text="Basic"
                android:textColor="#FFFFFF"
                android:textSize="60dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnBasicExit"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="44dp"
                    android:layout_height="37dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.927"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.072" />

                <ImageView
                    android:id="@+id/ivBasicExit"
                    android:layout_width="35dp"
                    android:layout_height="32dp"
                    app:layout_constraintBottom_toBottomOf="@+id/btnBasicExit"
                    app:layout_constraintEnd_toEndOf="@+id/btnBasicExit"
                    app:layout_constraintStart_toStartOf="@+id/btnBasicExit"
                    app:layout_constraintTop_toTopOf="@+id/btnBasicExit"
                    app:layout_constraintVertical_bias="0.0"
                    app:srcCompat="@drawable/exit_icon" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="327dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-20dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/subCategContainer"
                android:layout_width="322dp"
                android:layout_height="455dp"
                app:cardBackgroundColor="#A3D2ED"
                app:cardCornerRadius="15dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/btnBasicReadWrite"
                        style="@style/Widget.Material3.Button.IconButton.Outlined"
                        android:layout_width="286dp"
                        android:layout_height="104dp"
                        android:fontFamily="@font/kgprimarypenmanship"
                        android:text="Reading and Writing"
                        android:textColor="#A2D1EC"
                        android:textSize="15dp"
                        app:cornerRadius="15dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.21"
                        app:strokeColor="#FFFFFF"
                        app:strokeWidth="3dp" />

                    <ImageView
                        android:id="@+id/ivBasicReadWrite"
                        android:layout_width="105dp"
                        android:layout_height="90dp"
                        app:layout_constraintBottom_toBottomOf="@+id/btnBasicReadWrite"
                        app:layout_constraintEnd_toEndOf="@+id/btnBasicReadWrite"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/btnBasicReadWrite"
                        app:layout_constraintTop_toTopOf="@+id/btnBasicReadWrite"
                        app:layout_constraintVertical_bias="0.68"
                        app:srcCompat="@drawable/readwrite_icon" />

                    <TextView
                        android:id="@+id/tvBasicReadWrite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kgprimarypenmanship"
                        android:text="Reading"
                        android:textColor="#FFFFFF"
                        android:textSize="45dp"
                        app:layout_constraintBottom_toBottomOf="@+id/btnBasicReadWrite"
                        app:layout_constraintEnd_toEndOf="@+id/btnBasicReadWrite"
                        app:layout_constraintHorizontal_bias="0.312"
                        app:layout_constraintStart_toEndOf="@+id/ivBasicReadWrite"
                        app:layout_constraintTop_toTopOf="@+id/btnBasicReadWrite"
                        app:layout_constraintVertical_bias="0.532" />

                    <Button
                        android:id="@+id/btnBasicSpelling"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="286dp"
                        android:layout_height="104dp"
                        android:layout_marginTop="25dp"
                        android:text="Spelling"
                        android:textColor="#A2D1EC"
                        app:cornerRadius="15dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.555"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/btnBasicReadWrite"
                        app:layout_constraintVertical_bias="0.0"
                        app:strokeColor="#FFFFFF"
                        app:strokeWidth="3dp" />

                    <ImageView
                        android:id="@+id/ivBasicSpellingIcon"
                        android:layout_width="94dp"
                        android:layout_height="113dp"
                        app:layout_constraintBottom_toBottomOf="@+id/btnBasicSpelling"
                        app:layout_constraintEnd_toEndOf="@+id/btnBasicSpelling"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/btnBasicSpelling"
                        app:layout_constraintTop_toTopOf="@+id/btnBasicSpelling"
                        app:srcCompat="@drawable/spelling_icon" />

                    <TextView
                        android:id="@+id/tvBasicSpelling"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kgprimarypenmanship"
                        android:text="Spelling"
                        android:textColor="#FFFFFF"
                        android:textSize="45dp"
                        app:layout_constraintBottom_toBottomOf="@+id/btnBasicSpelling"
                        app:layout_constraintEnd_toEndOf="@+id/btnBasicSpelling"
                        app:layout_constraintHorizontal_bias="0.312"
                        app:layout_constraintStart_toEndOf="@+id/ivBasicSpellingIcon"
                        app:layout_constraintTop_toTopOf="@+id/btnBasicSpelling"
                        app:layout_constraintVertical_bias="0.532" />

                    <Button
                        android:id="@+id/btnBasicGrammar"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="286dp"
                        android:layout_height="104dp"
                        android:text="Button"
                        android:textColor="#A2D1EC"
                        app:cornerRadius="15dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/btnBasicSpelling"
                        app:strokeColor="#FFFFFF"
                        app:strokeWidth="3dp" />

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="83dp"
                        android:layout_height="93dp"
                        android:layout_marginTop="5dp"
                        app:layout_constraintBottom_toBottomOf="@+id/btnBasicGrammar"
                        app:layout_constraintEnd_toEndOf="@+id/btnBasicGrammar"
                        app:layout_constraintHorizontal_bias="0.035"
                        app:layout_constraintStart_toStartOf="@+id/btnBasicGrammar"
                        app:layout_constraintTop_toTopOf="@+id/btnBasicGrammar"
                        app:layout_constraintVertical_bias="0.0"
                        app:srcCompat="@drawable/grammar_icon" />

                    <TextView
                        android:id="@+id/tvBasicGrammar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="35dp"
                        android:fontFamily="@font/kgprimarypenmanship"
                        android:text="Grammar"
                        android:textColor="#FFFFFF"
                        android:textSize="40dp"
                        app:layout_constraintBottom_toBottomOf="@+id/btnBasicGrammar"
                        app:layout_constraintEnd_toEndOf="@+id/btnBasicGrammar"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toEndOf="@+id/imageView6"
                        app:layout_constraintTop_toTopOf="@+id/btnBasicGrammar"
                        app:layout_constraintVertical_bias="0.483" />

                    <TextView
                        android:id="@+id/tvBasicLesson"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/futura"
                        android:text="Choose a Lesson"
                        android:textColor="#000000"
                        android:textSize="28dp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/btnBasicReadWrite"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.504"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.757" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>