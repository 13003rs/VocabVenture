<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vocabbg"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/tvErrorUsername"
        android:layout_width="344dp"
        android:layout_height="23dp"
        android:fontFamily="@font/futura"
        android:maxLines="1"
        android:textColor="#E6453F"
        android:textSize="11sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvSetEmail"
        app:layout_constraintEnd_toEndOf="@+id/etSetUsername"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/etSetUsername"
        app:layout_constraintTop_toTopOf="@+id/etSetUsername"
        app:layout_constraintVertical_bias="0.714" />

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="256dp"
        android:layout_height="192dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.146"
        app:srcCompat="@drawable/vocablogo" />

    <TextView
        android:id="@+id/tvSetUNLabel"
        android:layout_width="214dp"
        android:layout_height="59dp"
        android:fontFamily="@font/muli"
        android:lineSpacingExtra="-6sp"
        android:text="Set Username and Email"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivLogo"
        app:layout_constraintVertical_bias="0.019" />

    <TextView
        android:id="@+id/tvCreateProfile"
        android:layout_width="221dp"
        android:layout_height="35dp"
        android:fontFamily="@font/muli"
        android:lineSpacingExtra="-6sp"
        android:text="Create a Profile"
        android:textAlignment="center"
        android:textColor="#707070"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.033" />

    <EditText
        android:id="@+id/etSetUsername"
        android:layout_width="282dp"
        android:layout_height="47dp"
        android:ems="10"
        android:fontFamily="@font/andika_new_basic"
        android:hint="Set your Username"
        android:inputType="text"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSetUsername"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/etSetEmail"
        android:layout_width="282dp"
        android:layout_height="47dp"
        android:ems="10"
        android:fontFamily="@font/andika_new_basic"
        android:hint="example@gmail.com"
        android:inputType="text"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSetEmail"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvSetUsername"
        android:layout_width="106dp"
        android:layout_height="23dp"
        android:fontFamily="@font/kgprimarypenmanship"
        android:text="*username"
        android:textColor="#B54B3D"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.195"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivLogo"
        app:layout_constraintVertical_bias="0.207" />

    <TextView
        android:id="@+id/tvSetEmail"
        android:layout_width="142dp"
        android:layout_height="22dp"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/kgprimarypenmanship"
        android:text="Email (Optional)"
        android:textColor="#B54B3D"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.219"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSetUNLabel"
        app:layout_constraintVertical_bias="0.246" />

    <Button
        android:id="@+id/btnProceed"
        android:layout_width="148dp"
        android:layout_height="59dp"
        android:backgroundTint="#B74D3F"
        android:fontFamily="@font/kgprimarypenmanship"
        android:letterSpacing="0"
        android:text="Proceed"
        android:textAllCaps="false"
        android:textColor="#F7EDD4"
        android:textSize="27sp"
        app:cornerRadius="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etSetEmail"
        app:layout_constraintVertical_bias="0.175" />

    <TextView
        android:id="@+id/tvHaveAnAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kgprimarypenmanship"
        android:text="Already have an account?"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.402"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivRegisterDivider"
        app:layout_constraintVertical_bias="0.0"
        app:layout_marginBaseline="36dp" />

    <Button
        android:id="@+id/btnRegisterBack"
        style="@style/Widget.Material3.Button.IconButton.Outlined"
        android:layout_width="38dp"
        android:layout_height="38dp"
        app:cornerRadius="20dp"
        app:icon="@drawable/back_arrow"
        app:iconGravity="textEnd"
        app:iconSize="37dp"
        app:iconTint="#3971C7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvCreateProfile"
        app:layout_constraintHorizontal_bias="0.292"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.033"
        app:strokeColor="#3971C8"
        app:strokeWidth="2dp" />

    <TextView
        android:id="@+id/tvRegisterBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/kgprimarypenmanship"
        android:text="Back"
        android:textColor="#3971C6"
        app:layout_constraintBottom_toTopOf="@+id/ivLogo"
        app:layout_constraintEnd_toStartOf="@+id/tvCreateProfile"
        app:layout_constraintHorizontal_bias="0.34"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnRegisterBack"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/btnRegisterLogin"
        style="@style/Widget.Material3.Button.TextButton.Icon"
        android:layout_width="70dp"
        android:layout_height="41dp"
        android:layout_marginStart="176dp"
        android:fontFamily="@font/kgprimarypenmanship"
        android:letterSpacing="0.05"
        android:text="Login"
        android:textColor="#B64D3F"
        android:textSize="19sp"
        android:textStyle="bold"
        app:iconPadding="0sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivRegisterDivider"
        app:layout_constraintVertical_bias="0.229" />

    <ImageView
        android:id="@+id/ivRegisterDivider"
        android:layout_width="325dp"
        android:layout_height="23dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="60dp"
        android:src="@drawable/divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnProceed"
        app:layout_constraintVertical_bias="0.387" />

</androidx.constraintlayout.widget.ConstraintLayout>