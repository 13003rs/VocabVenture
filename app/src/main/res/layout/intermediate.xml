<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvIntermediate"
        android:layout_width="314dp"
        android:layout_height="145dp"
        app:cardBackgroundColor="#7268CF"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.027">

        <Button
            android:id="@+id/btnInterExit"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.927"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.072" />

        <ImageView
            android:id="@+id/ivInterExit"
            android:layout_width="34dp"
            android:layout_height="33dp"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/btnBasicExit"
            app:layout_constraintEnd_toEndOf="@+id/btnBasicExit"
            app:layout_constraintStart_toStartOf="@+id/btnBasicExit"
            app:layout_constraintTop_toTopOf="@+id/btnBasicExit"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/exit_icon" />

        <ImageView
            android:id="@+id/ivIntermediateIcon"
            android:layout_width="160dp"
            android:layout_height="181dp"
            android:layout_marginLeft="-5dp"
            android:layout_marginTop="-8dp"
            app:srcCompat="@drawable/inter_icon" />

        <TextView
            android:id="@+id/tvInter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="45dp"
            android:fontFamily="@font/futura"
            android:text="Intermediate"
            android:textColor="#FFFFFF"
            android:textSize="48dp" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="339dp"
        android:layout_height="461dp"
        android:layout_marginTop="-25dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cvIntermediate"
        app:layout_constraintVertical_bias="0.0">

        <androidx.cardview.widget.CardView
            android:id="@+id/subCategAdvance"
            android:layout_width="328dp"
            android:layout_height="455dp"
            android:layout_marginLeft="4dp"
            app:cardBackgroundColor="#B0AFFF"
            app:cardCornerRadius="15dp" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnIntermediateGrammar"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="286dp"
                    android:layout_height="104dp"
                    android:text="Button"
                    android:textColor="#A2D1EC"
                    app:cornerRadius="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.619"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btnIntermediateSpelling"
                    app:layout_constraintVertical_bias="0.285"
                    app:strokeColor="#FFFFFF"
                    app:strokeWidth="3dp" />

                <Button
                    android:id="@+id/btnIntermediateSpelling"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="286dp"
                    android:layout_height="104dp"
                    android:text="Spelling"
                    android:textColor="#AFAEFE"
                    android:textSize="3dp"
                    app:cornerRadius="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.619"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btnIntermediateReadWrite"
                    app:layout_constraintVertical_bias="0.079"
                    app:strokeColor="#FFFFFF"
                    app:strokeWidth="3dp" />

                <Button
                    android:id="@+id/btnIntermediateReadWrite"
                    style="@style/Widget.Material3.Button.IconButton.Outlined"
                    android:layout_width="286dp"
                    android:layout_height="104dp"
                    android:fontFamily="@font/kgprimarypenmanship"
                    android:text="Reading and Writing"
                    android:textColor="#AFAEFE"
                    android:textSize="4dp"
                    app:cornerRadius="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.619"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.273"
                    app:strokeColor="#FFFFFF"
                    app:strokeWidth="3dp" />

                <ImageView
                    android:id="@+id/ivIntermediateReadWrite"
                    android:layout_width="105dp"
                    android:layout_height="90dp"
                    app:layout_constraintBottom_toBottomOf="@+id/btnIntermediateReadWrite"
                    app:layout_constraintEnd_toEndOf="@+id/btnIntermediateReadWrite"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/btnIntermediateReadWrite"
                    app:layout_constraintTop_toTopOf="@+id/btnIntermediateReadWrite"
                    app:layout_constraintVertical_bias="0.68"
                    app:srcCompat="@drawable/readwrite_icon" />

                <TextView
                    android:id="@+id/tvIntermediateReadWrite"
                    android:layout_width="160dp"
                    android:layout_height="54dp"
                    android:layout_marginLeft="-5dp"
                    android:fontFamily="@font/kgprimarypenmanship"
                    android:text="Reading"
                    android:textColor="#FFFFFF"
                    android:textSize="50dp"
                    app:layout_constraintBottom_toBottomOf="@+id/btnIntermediateReadWrite"
                    app:layout_constraintEnd_toEndOf="@+id/btnIntermediateReadWrite"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/ivIntermediateReadWrite"
                    app:layout_constraintTop_toTopOf="@+id/btnIntermediateReadWrite"
                    app:layout_constraintVertical_bias="0.6" />

                <ImageView
                    android:id="@+id/ivIntermediateSpelling"
                    android:layout_width="77dp"
                    android:layout_height="88dp"
                    android:layout_marginLeft="-10dp"
                    app:layout_constraintBottom_toBottomOf="@+id/btnIntermediateSpelling"
                    app:layout_constraintEnd_toEndOf="@+id/btnIntermediateSpelling"
                    app:layout_constraintHorizontal_bias="0.076"
                    app:layout_constraintStart_toStartOf="@+id/btnIntermediateSpelling"
                    app:layout_constraintTop_toTopOf="@+id/btnIntermediateSpelling"
                    app:layout_constraintVertical_bias="0.562"
                    app:srcCompat="@drawable/spelling_icon" />

                <TextView
                    android:id="@+id/tvIntermediateSpelling"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="48dp"
                    android:layout_marginEnd="96dp"
                    android:fontFamily="@font/kgprimarypenmanship"
                    android:text="Spelling"
                    android:textColor="#FFFFFF"
                    android:textSize="50dp"
                    app:layout_constraintBottom_toBottomOf="@+id/btnIntermediateSpelling"
                    app:layout_constraintEnd_toEndOf="@+id/btnIntermediateSpelling"
                    app:layout_constraintStart_toEndOf="@+id/ivIntermediateSpelling"
                    app:layout_constraintTop_toTopOf="@+id/btnIntermediateSpelling" />

                <ImageView
                    android:id="@+id/ivIntermediateGrammar"
                    android:layout_width="74dp"
                    android:layout_height="78dp"
                    app:layout_constraintBottom_toBottomOf="@+id/btnIntermediateGrammar"
                    app:layout_constraintEnd_toEndOf="@+id/btnIntermediateGrammar"
                    app:layout_constraintHorizontal_bias="0.074"
                    app:layout_constraintStart_toStartOf="@+id/btnIntermediateGrammar"
                    app:layout_constraintTop_toTopOf="@+id/btnIntermediateGrammar"
                    app:layout_constraintVertical_bias="0.444"
                    app:srcCompat="@drawable/grammar_icon" />

                <TextView
                    android:id="@+id/tvIntermediateGrammar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kgprimarypenmanship"
                    android:text="Grammar"
                    android:textColor="#FFFFFF"
                    android:textSize="50dp"
                    app:layout_constraintBottom_toBottomOf="@+id/btnIntermediateGrammar"
                    app:layout_constraintEnd_toEndOf="@+id/btnIntermediateGrammar"
                    app:layout_constraintHorizontal_bias="0.238"
                    app:layout_constraintStart_toEndOf="@+id/ivIntermediateGrammar"
                    app:layout_constraintTop_toTopOf="@+id/btnIntermediateGrammar"
                    app:layout_constraintVertical_bias="0.482" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tvIntermediateLesson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/futura"
                android:text="Choose a Lesson"
                android:textColor="#000000"
                android:textSize="28dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/btnBasicReadWrite"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.504"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.757" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>